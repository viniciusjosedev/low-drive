{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
				"project": [
					"./tsconfig.json"
				]
    },
    "rules": {
			"@typescript-eslint/strict-boolean-expressions": "off",
			"@typescript-eslint/semi": "off",
			"semi": [2, "always"],
			"@typescript-eslint/no-extraneous-class": "off",
			"@typescript-eslint/explicit-function-return-type": "off"
    }
}
